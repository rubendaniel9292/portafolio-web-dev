---
import Navbar from "../components/Navbar.jsx";
import "../styles/global.css";

export interface Props {
  title?: string;
}

const { title = "Mi Portafolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Portafolio de proyectos y habilidades en desarrollo web."
    />
  </head>
  <body>
    <header
      class="sticky top-0 z-50 w-full bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
    >
      <Navbar client:load />
      <!-- Alternativas según necesidad: -->
      <!-- <Navbar client:load /> -->
      <!-- <Navbar client:only="react" /> -->
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-2">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Información personal -->
            <div class="flex flex-col justify-items-between">
              <h3 class="text-xl font-bold mb-4¿2">Mi Portafolio</h3>
              <p class="text-gray-400 mb-4">
                Desarrollador Full Stack especializado en crear experiencias web
                modernas y funcionales.
              </p>
              
            </div>

            <!-- Enlaces rápidos -->
            <div>
              <h3 class="text-xl font-bold ">Enlaces rápidos</h3>
              <ul class="space-y-2">
                <li>
                  <a
                    href="#inicio"
                    class="text-gray-400 hover:text-white transition-colors"
                    >Inicio</a
                  >
                </li>
                <li>
                  <a
                    href="#sobre-mi"
                    class="text-gray-400 hover:text-white transition-colors"
                    >Sobre mí</a
                  >
                </li>
                <li>
                  <a
                    href="#habilidades"
                    class="text-gray-400 hover:text-white transition-colors"
                    >Habilidades</a
                  >
                </li>
                <li>
                  <a
                    href="#proyectos"
                    class="text-gray-400 hover:text-white transition-colors"
                    >Proyectos</a
                  >
                </li>
                <li>
                  <a
                    href="#contacto"
                    class="text-gray-400 hover:text-white transition-colors"
                    >Contacto</a
                  >
                </li>
              </ul>
            </div>

            <!-- Contacto -->
          </div>

          <div
            class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400"
          >
            <div class="flex flex-col sm:flex-row justify-center items-center gap-4 mb-4">
              <p>&copy; 2024 Daniel Rubén Rivas Saltos. Todos los derechos reservados.</p>
              <div class="flex gap-4">
                <a
                  href="/politica-privacidad"
                  class="text-gray-400 hover:text-white transition-colors text-sm underline"
                >
                  Política de Privacidad
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
