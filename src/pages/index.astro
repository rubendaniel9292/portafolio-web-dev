---
import MainLayout from "../layouts/MainLayout.astro";
import AboutSection from "../components/AboutSection.astro";
import SkillsSection from "../components/SkillsSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import ContactSection from "../components/ContactSection.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedInIcon from "../components/icons/Linkedind.astro";
import "../styles/global.css";
---

<MainLayout title="Daniel Rubén - Portfolio">
    <!-- Sección Hero con imagen de fondo -->
    <section
        id="inicio"
        class="indexhome bg-cover bg-center bg-no-repeat h-screen flex items-center relative"
    >
        <!-- Overlay oscuro para mejorar legibilidad -->
        <div class="absolute inset-0 bg-black/40"></div>

        <!-- Contenido principal -->
        <div class="container mx-auto px-2 pt-48 md:pt-4  relative z-10">
            <div class="max-w-4xl mx-auto text-center ">
                <!-- Foto profesional -->
                <div class="mb-8 md:mt-4">
                    <div
                        class="w-72 h-72 mx-auto rounded-full bg-gradient-to-br
                    from-blue-500 to-teal-500 p-1 shadow-2xl"
                    >
                        <img
                            src="/images/fotoeditada.jpeg"
                            alt="Daniel Ruben Rivas Saltos"
                            class="w-full h-full rounded-full object-cover"
                        />
                    </div>
                </div>

                <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                    Daniel Ruben Rivas Saltos
                </h1>
                <span class="text-4xl md:text-6xl font-bold mb-6 text-teal-400"
                    >Full Stack</span
                >

                <p
                    class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto leading-relaxed"
                >
                    Especializado en desarrollo frontend y backend, creando
                    experiencias web modernas y funcionales con las últimas
                    tecnologías.
                </p>

                <!-- Botones de acción -->
                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center mb-12"
                >
                    <a
                        href="#proyectos"
                        class="bg-gray-900 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
                    >
                        Ver mis proyectos
                    </a>
                    <a
                        href="#contacto"
                        class="border-2 border-teal-400 text-teal-400 hover:bg-teal-400 hover:text-white px-8 py-3 rounded-lg font-semibold bg-white/10 backdrop-blur-sm transition-colors"
                    >
                        Descargar CV
                    </a>
                </div>

                <!-- Enlaces sociales -->
                <div class="flex justify-center space-x-6">
                    <a
                        href="https://github.com/tu-usuario"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:scale-110 transition-transform skill-icon icon-github"
                        title="GitHub"
                    >
                        <GitHubIcon />
                    </a>
                    <a
                        href="https://linkedin.com/in/tu-perfil"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:scale-110 transition-transform skill-icon icon-linkedin"
                        title="LinkedIn"
                    >
                        <LinkedInIcon />
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Importar componentes reutilizables -->
    <AboutSection />
    <SkillsSection />
    <ProjectsSection />
    <ContactSection />
</MainLayout>
